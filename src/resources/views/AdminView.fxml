<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="panel30Deg" stylesheets="@../Styles/MainStylesheet.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Application.GUI.Controllers.AdminViewController">
   <children>
      <BorderPane prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <center>
            <TabPane prefHeight="254.0" prefWidth="438.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
              <tabs>
                <Tab text="Elever">
                     <content>
                        <TableView fx:id="tblViewStudent" prefHeight="279.0" prefWidth="596.0" stylesheets="@../Styles/TableViewStylesheet.css">
                          <columns>
                            <TableColumn fx:id="tblClmStudentFirstName" prefWidth="75.0" text="Forenavn" />
                              <TableColumn fx:id="tblClmStudentLastName" prefWidth="75.0" text="Efternavn" />
                              <TableColumn fx:id="tblClmStudentEmail" prefWidth="75.0" text="Email" />
                          </columns>
                        </TableView>
                     </content>
                  </Tab>
                <Tab text="Lærer">
                     <content>
                        <TableView fx:id="tblViewTeacher" prefHeight="200.0" prefWidth="200.0" stylesheets="@../Styles/TableViewStylesheet.css">
                          <columns>
                            <TableColumn fx:id="tblClmTeacherFirstName" prefWidth="75.0" text="Forenavn" />
                            <TableColumn fx:id="tblClmTeacherLastName" prefWidth="75.0" text="Efternavn" />
                              <TableColumn fx:id="tblClmTeacherEmail" prefWidth="75.0" text="Email" />
                          </columns>
                        </TableView>
                     </content>
                  </Tab>
                  <Tab text="Skoler">
                     <content>
                        <TableView fx:id="tblViewSchool" prefHeight="200.0" prefWidth="200.0" stylesheets="@../Styles/TableViewStylesheet.css">
                          <columns>
                            <TableColumn fx:id="tblClmSchoolName" prefWidth="75.0" />
                            <TableColumn fx:id="tblClmSchoolZipCode" prefWidth="109.0" text="postnummer" />
                              <TableColumn fx:id="tblClmSchoolCity" prefWidth="64.0" text="by" />
                          </columns>
                        </TableView>
                     </content>
                  </Tab>
              </tabs>
            </TabPane>
         </center>
         <bottom>
            <HBox alignment="CENTER" prefHeight="66.0" prefWidth="596.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="btnCreateStudent" mnemonicParsing="false" onAction="#createStudent" styleClass="panelBtn" text="Ny Elev">
                     <HBox.margin>
                        <Insets right="50.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="btnCreateTeacher" mnemonicParsing="false" onAction="#createTeacher" styleClass="panelBtn" text="Ny Lærer">
                     <HBox.margin>
                        <Insets right="50.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="btnCreateSchool" mnemonicParsing="false" onAction="#createSchool" styleClass="panelBtn" text="Ny Skole" />
               </children>
            </HBox>
         </bottom>
         <top>
            <Label BorderPane.alignment="CENTER" />
         </top>
      </BorderPane>
   </children>
</AnchorPane>
